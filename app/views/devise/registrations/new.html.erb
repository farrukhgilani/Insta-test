<div class="d-flex justify-content-center align-item-center overflow-hidden">

  <div class="flex-column">

<div class="p-5 border mt-5 bg-white signup">

      <div class="d-flex justify-content-center">
          <%=image_tag '/Instagram_Logo_2016.png',  style: 'height:100%; width:60%;', class:'m-3' %>
      </div>

    <h6>Sign up to see photos and videos from your friends.</h6>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
          <%= f.text_field :username, autofocus: true, placeholder: 'username', class:'form-control' %>
        </div>

        <div class="field">
          <%= f.text_field :name, class:'form-control',placeholder: 'name'  %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'email', class:'form-control'  %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",placeholder: 'password', class:'form-control'  %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: 'confirm password',  class:'form-control'  %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up",class:'btn btn-primary w-100' %>
        </div>
      <% end %>



  </div>

  <div  class="p-5 border mt-2 bg-white signup text-center">
    Have an account? <%= render "devise/shared/links" %>
  </div>

  </div>
</div>

 <footer class="container">
  <div class="d-flex flex-row justify-content-center">
    <span class="m-3 text-secondary"> Meta </span>
    <span class="m-3 text-secondary"> About </span>
    <span class="m-3 text-secondary"> Blog </span>
    <span class="m-3 text-secondary"> Jobs </span>
    <span class="m-3 text-secondary"> Help </span>
    <span class="m-3 text-secondary"> API </span>
    <span class="m-3 text-secondary"> Privacy </span>
    <span class="m-3 text-secondary"> Terms </span>
  </div>


  </footer>

